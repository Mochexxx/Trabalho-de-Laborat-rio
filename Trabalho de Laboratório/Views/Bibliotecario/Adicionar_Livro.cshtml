@model Livro

<h2>Adicionar Livro</h2>
<form asp-action="AdicionarLivro" method="post">
    <label>Título:</label>
    <input type="text" asp-for="Título" required />
    <label>Autor:</label>
    <input type="text" asp-for="Autor" required />
    <label>Género:</label>
    <input type="text" asp-for="Género" required />
    <label>Preço:</label>
    <input type="number" asp-for="Preço" required />
    <label>ISBN:</label>
    <input type="text" asp-for="ISBN" required />
    <label>Número de Exemplares:</label>
    <input type="number" asp-for="Número_de_Exemplares" required />
    <button type="submit">Adicionar</button>
</form>
